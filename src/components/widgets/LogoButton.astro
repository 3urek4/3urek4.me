---
import Link from '~/components/base/Link.astro'
import { withBasePath } from '~/utils/path'
import { SITE } from '~/config'
---

<Link
  class="select-none op-transition"
  href={withBasePath('/')}
  aria-label={SITE.author}
  aria-current={Astro.url.pathname === `${withBasePath('/')}` ? 'page' : false}
>
  <div class="logo-container">
    <!-- ICON SVG - 直接引用 favicon.svg -->
    <img
      src={withBasePath('/favicon.svg')}
      alt="Logo"
      class="logo-icon"
      aria-hidden="true"
    />

    <svg
      width="107.548"
      height="32.732"
      viewBox="0 0 107.548 32.732"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
    </svg>
  </div>
</Link>

<style>
  .logo-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.8rem;

    transform: scale(1.05);
  }

  @media (max-width: 767.9px) {
    .logo-container {
      margin-top: 0.125rem;

      transform-origin: 0%;
      transform: scale(0.95);
    }
  }

  .logo-container svg {
    height: 2rem;
  }

  .logo-icon {
    height: 2em;
    width: 2em;
  }
</style>
